<% content_for :title, "Favorites" %>
<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Favorites</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Favorite Route Group</th>
        <th>Commuter Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @favorites.each do |favorite| %>
        <tr>
          <td><%= favorite.name %></td>
          <td><%= favorite.commuter.name %></td>
          <td><%= link_to 'Show', favorite %></td>
          <td><%= link_to 'Edit', edit_favorite_path(favorite) %></td>
          <td><%= link_to 'Destroy', favorite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Favorite', new_favorite_path %>
</div>
