<html>
  <head>
    <%# Change title depending on page  %>
    <title><%= yield(:title) %> - Transit</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%# Allow responsiveness %>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


  </head>

  <body>
    <%# Setting site-container to 100vh for element parent issues  %>
    <div class="site-container">
      <%= render 'layouts/header' %>

        <%# This is placed so footer will stay below the pages %>
        <div class="site-content py-5">

          <%= yield %>

        </div>

        <div class="container">
           <%= debug(params) if Rails.env.development? %>
        </div>
      <%= render 'layouts/footer' %>

    </div>

  </body>
</html>
